@model InvoiceApi.Models.InvoiceDetails
@{
    var index = 1;
}



<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
	<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

	<div class="page-content container" style="border: 2px solid aqua;width:1040px">


		<div class="container px-0">
			<div class="row mt-4">
				<div class="col-12 col-lg-12">
					<div class="row">
						<div class="col-6">

                      
							<div class="">
								<div class="mt-1 mb-2 text-secondary-m1 text-600 text-125">
									@if(!string.IsNullOrWhiteSpace(Model.ImageBase64String)){
									<img style="width:150px" src="@Model.ImageBase64String" />
									}
								</div>


							</div>
						</div>
						<div class="col-6">

							<div class="text-grey-m2" style="text-align: end;">

								<div class="my-2"> <span class="text-600 text-90">Invoice No: </span>@(!string.IsNullOrWhiteSpace(Model.InvoiceNumber) ? Model.InvoiceNumber:"-")</div>

								<div class="my-2"> <span class="text-600 text-90">Invoice  Date: @(!string.IsNullOrWhiteSpace(Model.FormattedInvoiceDate) ? Model.FormattedInvoiceDate : "-")</span></div>
								@if (!string.IsNullOrWhiteSpace(Model.FormattedInvoiceDueDate))
                                {
							<div class="my-2"> <span class="text-600 text-90">Due Date: @Model.FormattedInvoiceDueDate</span></div>
                                }
								
							</div>
						</div>
					</div>
					<!-- .row -->

					<hr class="row brc-default-l1 mx-n1 mb-4" />

					<div class="row">
						<div class="text-95 col-sm-6 align-self-start  justify-content-end">
                            <hr class="d-sm-none" />
							<div class="text-grey-m2">
								<div class="mt-1 mb-2 text-secondary-m1 text-600 text-125">
									From:
								</div>

								<div class="my-2"> <span class="text-600 text-90"><b>@Model.BusinessDetails.BusinessName</b></span> </div>
								@if (!string.IsNullOrWhiteSpace(Model.BusinessDetails.BusinessEmail))
								{
									<div class="my-2"><b>Email:</b> <span class="text-600 text-90">@Model.BusinessDetails.BusinessEmail</span></div>
								}

								@if (!string.IsNullOrWhiteSpace(Model.BusinessDetails.Address))
								{
									<div class="my-2"> <span class="text-600 text-90">@Model.BusinessDetails.Address </span></div>
								}

								@if (!string.IsNullOrWhiteSpace(Model.BusinessDetails.FormattedAddress))
								{
									<div class="my-2"> <span class="text-600 text-90">@Model.BusinessDetails.FormattedAddress</span></div>
								}

								@if (!string.IsNullOrWhiteSpace(Model.BusinessDetails.ZipCode))
								{
									<div class="my-2"> <span class="text-600 text-90">@Model.BusinessDetails.ZipCode</span></div>
								}

								@if (!string.IsNullOrWhiteSpace(Model.BusinessDetails.BusinessPhone))
								{
									<div class="my-2"> <span class="text-600 text-90"><i class="fa fa-phone fa-flip-horizontal text-secondary"></i> @Model.BusinessDetails.BusinessPhone</span></div>
								}

							</div>
						</div>
						<!-- /.col -->

						<div class="text-95 col-sm-6 align-self-start  justify-content-end">
							<hr class="d-sm-none" />
							<div class="text-grey-m2">
								<div class="mt-1 mb-2 text-secondary-m1 text-600 text-125">
									To:
								</div>

								<div class="my-2"> <span class="text-600 text-90"><b>@Model.ClientsDetails.ClientName</b></span> </div>
								@if (!string.IsNullOrWhiteSpace(Model.ClientsDetails.ClientEmail))
								{
									<div class="my-2"><b>Email:</b> <span class="text-600 text-90">@Model.ClientsDetails.ClientEmail</span></div>
								}

								@if (!string.IsNullOrWhiteSpace(Model.ClientsDetails.Address))
								{
									<div class="my-2"> <span class="text-600 text-90">@Model.ClientsDetails.Address </span></div>
								}

								@if (!string.IsNullOrWhiteSpace(Model.ClientsDetails.FormattedAddress))
								{
									<div class="my-2"> <span class="text-600 text-90">@Model.ClientsDetails.FormattedAddress</span></div>
								}

								@if (!string.IsNullOrWhiteSpace(Model.ClientsDetails.ZipCode))
								{
									<div class="my-2"> <span class="text-600 text-90">@Model.ClientsDetails.ZipCode</span></div>
								}

								@if (!string.IsNullOrWhiteSpace(Model.ClientsDetails.ClientPhone))
								{
									<div class="my-2"> <span class="text-600 text-90"><i class="fa fa-phone fa-flip-horizontal text-secondary"></i> @Model.ClientsDetails.ClientPhone</span></div>
								}
							</div>
						</div>
						
						<!-- /.col -->
					</div>

					<div class="mt-4">
						<div class="row text-600 text-white bgc-default-tp1 py-25">
							<div class="d-none d-sm-block col-1">#</div>
							<div class="col-5 col-sm-5">Description</div>
							<div class="d-none d-sm-block col-2 col-sm-1">Qty</div>
							<div class="d-none d-sm-block col-sm-2">Rate</div>
							<div class="col-2">Amount</div>
						</div>
						</div>

						<div class="text-95 text-secondary-d3">
							@foreach (var item in Model.Itemdetails)
							{

								<div class="row mb-2 mb-sm-0 py-25">
									<div class="d-none d-sm-block col-1">@(index++)</div>
									<div class="col-9 col-sm-5">@(!string.IsNullOrWhiteSpace(item.ItemDescription) ? item.ItemDescription : "-")</div>
									<div class="d-none d-sm-block col-2 col-sm-1">@(item.Quantity)</div>
									<div class="d-none d-sm-block col-2 text-95">$@(item.Rate)</div>
									<div class="col-2 text-secondary-d2">&nbsp;&nbsp;&nbsp;$@(decimal.Round(item.Quantity * item.Rate, 2, MidpointRounding.AwayFromZero))</div>
								</div>
                            }
							



						</div>

						<div class="row border-b-2 brc-default-l2"></div>

						<hr />

						<div class="row mt-3">
							<div class="col-sm-7">
							<div class="col-12  text-grey-d2 text-95 mt-2 mt-lg-0">
								@if (!string.IsNullOrWhiteSpace(Model.Notes)) {
									<div><b>Terms And Conditions</b></div>
                                }
								@(!string.IsNullOrWhiteSpace(Model.Notes) ? Model.Notes : string.Empty)
							</div>
							
							
						<div class="col-12  text-grey-d2 text-95 mt-2 mt-lg-0">
							@(!string.IsNullOrWhiteSpace(Model.Terms) ? Model.Terms : string.Empty)
						</div>
								</div>
							

							
							<div class="col-12 col-sm-5 text-grey text-90 order-first order-sm-last">
								<div class="row my-2">
									<div class="col-7 text-right">
										SubTotal:
									</div>
									<div class="col-5">
										<span class="text-120 text-secondary-d1">$@Model.SubTotal</span>
									</div>
								</div>

								<div class="row my-2">
									<div class="col-7 text-right">
										VAT(@Model.TaxPercentage@(Model.Taxtype=="percentage" ? "%":string.Empty)):
									</div>
									<div class="col-5">
										<span class="text-110 text-secondary-d1">$@Model.Tax</span>
									</div>
								</div>
								<div class="row my-2">
									<div class="col-7 text-right">
										Discount(@Model.DiscountPercentage@(Model.DiscountType == "percentage" ? "%" : string.Empty)):
									</div>
									<div class="col-5">
										<span class="text-110 text-secondary-d1">$@Model.Discount</span>
									</div>
								</div>

								<div class="row my-2 align-items-center bgc-primary-l3 p-2">
									<div class="col-7 text-right">
										Total Amount:
									</div>
									<div class="col-5">
										<span class="text-150 text-success-d3 opacity-2">$@Model.Total</span>
									</div>
								</div>
							</div>
						</div>




					</div>
				</div>
			</div>
		</div>
	</div>


	<style type="text/css">

		body {
			margin-top: 20px;
			color: #484b51;
		}

		.text-secondary-d1 {
			color: #728299 !important;
		}

		.page-header {
			margin: 0 0 1rem;
			padding-bottom: 1rem;
			padding-top: .5rem;
			border-bottom: 1px dotted #e2e2e2;
			display: -ms-flexbox;
			display: flex;
			-ms-flex-pack: justify;
			justify-content: space-between;
			-ms-flex-align: center;
			align-items: center;
		}

		.page-title {
			padding: 0;
			margin: 0;
			font-size: 1.75rem;
			font-weight: 300;
		}

		.brc-default-l1 {
			border-color: #dce9f0 !important;
		}

		.ml-n1, .mx-n1 {
			margin-left: -.25rem !important;
		}

		.mr-n1, .mx-n1 {
			margin-right: -.25rem !important;
		}

		.mb-4, .my-4 {
			margin-bottom: 1.5rem !important;
		}

		hr {
			margin-top: 1rem;
			margin-bottom: 1rem;
			border: 0;
			border-top: 1px solid rgba(0,0,0,.1);
		}

		.text-grey-m2 {
			color: #888a8d !important;
		}

		.text-success-m2 {
			color: #86bd68 !important;
		}

		.font-bolder, .text-600 {
			font-weight: 600 !important;
		}

		.text-110 {
			font-size: 110% !important;
		}

		.text-blue {
			color: #478fcc !important;
		}

		.pb-25, .py-25 {
			padding-bottom: .75rem !important;
		}

		.pt-25, .py-25 {
			padding-top: .75rem !important;
		}

		.bgc-default-tp1 {
			background-color: rgba(121,169,197,.92) !important;
		}

		.bgc-default-l4, .bgc-h-default-l4:hover {
			background-color: #f3f8fa !important;
		}

		.page-header .page-tools {
			-ms-flex-item-align: end;
			align-self: flex-end;
		}

		.btn-light {
			color: #757984;
			background-color: #f5f6f9;
			border-color: #dddfe4;
		}

		.w-2 {
			width: 1rem;
		}

		.text-120 {
			font-size: 120% !important;
		}

		.text-primary-m1 {
			color: #4087d4 !important;
		}

		.text-danger-m1 {
			color: #dd4949 !important;
		}

		.text-blue-m2 {
			color: #68a3d5 !important;
		}

		.text-150 {
			font-size: 150% !important;
		}

		.text-60 {
			font-size: 60% !important;
		}

		.text-grey-m1 {
			color: #7b7d81 !important;
		}

		.align-bottom {
			vertical-align: bottom !important;
		}
	</style>

	<script type="text/javascript"></script>
</body>
</html>